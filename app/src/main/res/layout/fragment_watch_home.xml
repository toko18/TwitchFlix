<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_watch_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".WatchActivity">

    <TextView
        android:id="@+id/live_textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundColor2"
        android:text="@string/watch_livestreamsBar"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/movie_gridViewLivestreams2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:numColumns="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_textView2">

    </GridView>

    <TextView
        android:id="@+id/movie_textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundColor2"
        android:text="@string/watch_moviesBar"
        android:textColor="@color/secondaryTextColor"
        tools:layout_editor_absoluteY="24dp"
        app:layout_constraintTop_toBottomOf="@id/movie_gridViewLivestreams2"
        android:maxLines="1"/>

    <GridView
        android:id="@+id/movie_gridViewMovies2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:numColumns="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_textView2">

    </GridView>

</android.support.constraint.ConstraintLayout>